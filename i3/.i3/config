exec --no-startup-id i3-msg 'exec /usr/bin/pulseaudio --start'
exec xautolock \
    -time 8 -locker 'killall -SIGUSR1 dunst ; i3lock -c 000000 ; killall -SIGUSR2 dunst' \
    -notify 60 -notifier 'notify-send "Inactive" "Locking screen in 1 min"'

exec --no-startup-id nm-applet

